    cd $ROOST_WORK_DIR/git/VivekKB1410/ballot

    export IMAGE_TAG=$ROOST_NAMESPACE
    export PATH=$PATH:/usr/bin:/usr/local/bin

    docker build -f ballot/Dockerfile -t ballot:$ROOST_ENV_ID ballot/
